<a href="<%= show_user_path @user.id %>">Profile</a>
<h1><i>Lay bare thy secrets</i></h1>
<% @secrets.reverse.each do |secret| %>
    <p><b><%= secret.likes.count %></b> - <%= secret.content %></p>
    <% if @user.id == secret.user_id %>
        <%= link_to 'Delete', delete_secret_path(secret.id), data: {confirm: "Put your secret to bed?", method:'delete'} %>
    <% end %>
    <% if secret.users.include? @user %>
        <%= link_to 'Unlike', delete_like_path(secret.id), data: {method:'delete'} %>
    <% else %>
        <%= link_to 'Like', create_like_path(secret.id)%>
    <% end %>        
    
<% end %>